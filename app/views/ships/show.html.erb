<div class="container">
  <div class="row my-3">
    <%# CAROUSEL %>
    <div class="col-sm-6">
      <%= render "shared/carousel" %>
    </div>
    <%# SHIP INFO %>
    <div class="col-sm-6">
      <div class="row">
        <div class="col">
          <h1><%= @ship.name %></h1>
        </div>
      </div>
      <p><strong>Category:</strong> <%= @ship.category %></p>
      <p><strong>Daily price:</strong> <%= @ship.daily_price %></p>
      <p><strong>Address:</strong> <%= @ship.address %></p>
      <p><strong>Docking number:</strong> <%= @ship.docking_number %></p>
    </div>
  </div>
  <%# SHIP DESCRIPTION %>
  <div class="row mx-0">
    <p><strong>Description:</strong> <%= @ship.description %></p>
  </div>
  <%# MAPBOX %>
  <div id="map" class="mb-4"
     style="width: 100%; height: 400px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <%# BOOKING %>
  <div class='mb-4'>
    <%= simple_form_for [@ship, @booking] do |f| %>
      <%= f.input :start_date, as: :date, html5: true %>
      <%= f.input :end_date, as: :date, html5: true %>
      <%= f.button :submit, "Book", class: "btn btn-primary btn-lg btn-block btn-booking" %>
    <% end %>
  </div>
  <%# LINKS %>
  <div class="row mx-0 mb-4">
    <%= link_to ships_path, class: "btn btn-secondary" do %>
      Back to ships list <i class="fas fa-anchor"></i>
    <% end %>
  </div>
</div>
