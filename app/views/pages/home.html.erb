<div class="banner-homepage d-flex justify-content-between align-items-center" style="background-image: linear-gradient(rgba(255,255,255,0.5), rgba(255,255,255,0.5)), url(<%= image_path("banner/beach.png") %>);">
  <div class="banner-container">
    <h3 class="slogan text-center">Go boating and experience the best holiday of your life!</h3>

    <%= simple_form_for :index, url: ships_path, method: "GET" do |f| %>
      <div class="search-bar d-flex justify-content-between">
        <%= f.select :category, options_for_select(@ships.pluck(:category).uniq), input_html: { class: 'input-focus' }, prompt: 'Category' %>
        <div class="input-separation">|</div>
        <%= f.input :address, input_html: {id:"ship_address", class: 'input-focus input-location'}, placeholder: 'Location', label: false %>
        <%= button_tag type: "submit", class: "btn btn-success rounded-circle search-btn" do %>
          <i class="material-icons">sailing</i>
        <% end %>
      </div>
    <% end %>

  </div>
</div>

